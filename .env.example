# EPR MCP Server Configuration
# Copy this file to .env and update the values

# EPR Server Configuration
# Note: When running in Docker, use one of these URL patterns:
# - For EPR server on host machine: http://host.docker.internal:8042
# - For EPR server in another container: http://epr-server-container-name:8042  
# - For EPR server accessible via network: http://your-epr-server-host:8042
EPR_URL=http://host.docker.internal:8042
EPR_TOKEN=your-epr-api-token-here
EPR_DEBUG=false

# Grafana Configuration (for monitoring profile)
GRAFANA_USER=admin
GRAFANA_PASSWORD=secure-password-here

# Docker Configuration
COMPOSE_PROJECT_NAME=epr-mcp